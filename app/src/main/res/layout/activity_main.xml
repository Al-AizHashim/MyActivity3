<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0ff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_View_Name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:padding="10dp"
        android:background="#fff"
        android:layout_marginRight="10dp"
        android:hint="name" />

    <TextView
        android:id="@+id/txt_View_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:padding="10dp"
        android:layout_marginLeft="7dp"
        android:background="#fff"
        android:layout_toRightOf="@id/txt_View_Name"
        android:layout_alignParentRight="true"
        android:hint="Address" />

    <TextView
        android:id="@+id/txt_View_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="#fff"
        android:layout_below="@id/txt_View_Name"
        android:textSize="23sp"
        android:hint="Subject" />

    <TextView
        android:id="@+id/txt_View_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:layout_above="@id/btn_submet"
        android:layout_below="@id/txt_View_subject"
        android:hint="Message" />

    <Button
        android:id="@+id/btn_submet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="SUBMET"></Button>
</RelativeLayout>